    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Gateway",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\gateway",
            "program": "${workspaceFolder}\\gateway\\index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}\\server",
            "program": "${workspaceFolder}\\server\\index.js"
        }
    ],
    "compounds": [
        {
            "name": "Run gateway and server",
            "configurations": ["Launch Gateway","Launch Server"]
        }
    ]
}